<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GenshinMobileApp.Pages.CurrentCharacterPage">
    <ContentPage.Content>
        <StackLayout >
            <Image x:Name="characterPhoto" Source="{Binding fullImage}" Aspect="Fill" HeightRequest="250"></Image>
            <StackLayout>
                <Label Text="Character name"></Label>
                <Label Text="{Binding name}" x:Name="nameCharacter" />
            </StackLayout>
            <StackLayout>
                <Label Text="Character vision"></Label>
                <Label Text="{Binding vision}" x:Name="visionCharacter"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Character weapon"></Label>
                <Label Text="{Binding weapon}" x:Name="weaponCharacter"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>